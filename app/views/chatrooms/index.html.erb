<% if @chatrooms.present? %>
  <% @chatrooms.each do |chatroom| %>
    <%= chatroom.name %>
  <% end %>
<% else %>
  <p>Nenhuma conversa</p>
<% end %>
<%= form_with(model: @new_chatroom, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= select_tag(:user_id, options_for_select(current_user.followings.collect { |user| [user.username, user.id] }), class: "form-control") %>
  </div>

  <div class="actions">
    <%= form.submit 'Iniciar', class: 'btn btn-dark' %>
  </div>
<% end %>