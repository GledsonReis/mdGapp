<div class="comment-item mx-2">
  <%= form_with(model: comment, remote: true) do |form| %>
    <div class="field">
      <%= form.hidden_field :post_id, id: "comment_#{comment.id}_post" %>
    </div>

    <div class="field">
      <%= form.hidden_field :user_id, id: "comment_#{comment.id}_user", value: current_user.id %>
    </div>

    <div class="form-group">
    </div>
    <div class="input-group mb-3">
      <%= form.text_field :comment, id: "comment_#{comment.id}", class: "form-control" %>
      <div class="input-group-append">
        <%= form.submit 'Comentar', class: "btn btn-blue" %>
      </div>
    </div>

    <div class="actions">
      
    </div>
  <% end %>
</div>
